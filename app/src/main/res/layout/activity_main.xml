<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingVertical="20dp"
        android:background="@color/backgroundcolor"
        android:paddingLeft="28dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="Da Nang"
                android:fontFamily="@font/lato_bold"
                android:textColor="@color/textcolor"
                android:paddingBottom="6dp"
                android:textSize="24dp"
                android:layout_height="wrap_content"/>
            <!--             <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_width="30dp"
                                android:src="@drawable/location"
                                android:paddingRight="8dp"
                                android:layout_height="30dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:text="Da Nang"
                                android:textColor="@color/textcolor"
                                android:textSize="24dp"
                                android:layout_height="wrap_content"/>
                        </LinearLayout> -->
            <TextView
                android:layout_width="wrap_content"
                android:text="Today, 19th May 2022"
                android:textColor="@color/textcolor"
                android:fontFamily="@font/lato_regular"
                android:textSize="16dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:gravity="right"
            android:paddingTop="8dp"
            android:paddingRight="30dp"
            android:layout_height="wrap_content">
            <ImageButton
                android:layout_width="30dp"
                android:src="@drawable/location"
                android:id="@+id/button_location"
                android:background="@drawable/add_button"
                android:scaleType="fitXY"
                android:layout_height="30dp"/>
            <ImageButton
                android:layout_width="30dp"
                android:src="@drawable/doubts_button"
                android:id="@+id/button_question"
                android:background="@drawable/add_button"
                android:layout_marginLeft="12dp"
                android:scaleType="fitXY"
                android:layout_height="30dp"/>
        </LinearLayout>
    </LinearLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/pager">

    </androidx.viewpager2.widget.ViewPager2>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@color/design_default_color_primary"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/backgroundcolor"
            android:gravity="bottom"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="@drawable/back"
                android:orientation="vertical"
                android:paddingLeft="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="24dp"
                    android:paddingBottom="8dp"
                    android:fontFamily="@font/lato_bold"
                    android:text="Weather now"
                    android:textColor="@color/textcolor"
                    android:textFontWeight="600"
                    android:textSize="26sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingRight="60dp">


                        <!--                    Precitation-->


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="12dp">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="@drawable/back_icon"
                                android:padding="4dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/umbrela" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:orientation="vertical"
                                android:paddingLeft="4dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Pressure"
                                    android:fontFamily="@font/lato_regular"
                                    android:textColor="@color/greycolor"
                                    android:textFontWeight="400"
                                    android:textSize="16sp" />

                                <TextView
                                    android:id="@+id/txtPrecitation"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="20%"
                                    android:fontFamily="@font/lato_regular"
                                    android:textColor="@color/textcolor"
                                    android:textFontWeight="1000"
                                    android:textSize="20sp" />
                            </LinearLayout>
                        </LinearLayout>

                        <!--                    Windy-->

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="12dp">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="@drawable/back_icon"
                                android:padding="4dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/fan" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:orientation="vertical"
                                android:paddingLeft="4dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Windy"
                                    android:fontFamily="@font/lato_regular"
                                    android:textColor="@color/greycolor"
                                    android:textFontWeight="400"
                                    android:textSize="16sp" />

                                <TextView
                                    android:id="@+id/txtWindy"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="25 km/h"
                                    android:fontFamily="@font/lato_regular"
                                    android:textColor="@color/textcolor"
                                    android:textFontWeight="1000"
                                    android:textSize="20sp" />
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <!--                    Precitation-->


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="12dp">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="@drawable/back_icon"
                                android:padding="4dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/temp" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:orientation="vertical"
                                android:paddingLeft="4dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Fell like"
                                    android:fontFamily="@font/lato_regular"
                                    android:textColor="@color/greycolor"
                                    android:textFontWeight="400"
                                    android:textSize="16sp" />

                                <TextView
                                    android:id="@+id/txtfeelike"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="25°C"
                                    android:fontFamily="@font/lato_regular"
                                    android:textColor="@color/textcolor"
                                    android:textFontWeight="1000"
                                    android:textSize="20sp" />
                            </LinearLayout>
                        </LinearLayout>

                        <!--                    Windy-->

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="12dp">

                            <ImageView
                                android:id="@+id/imageView2"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="@drawable/back_icon"
                                android:padding="4dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/water" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:orientation="vertical"
                                android:paddingLeft="4dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Humidity"
                                    android:fontFamily="@font/lato_regular"
                                    android:textColor="@color/greycolor"
                                    android:textFontWeight="400"
                                    android:textSize="16sp" />

                                <TextView
                                    android:id="@+id/txtHumidity"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="25 km/h"
                                    android:fontFamily="@font/lato_regular"
                                    android:textColor="@color/textcolor"
                                    android:textFontWeight="1000"
                                    android:textSize="20sp" />
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="20dp"
                    android:orientation="horizontal">


                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:text="Hourly"
                        android:fontFamily="@font/lato_regular"
                        android:textColor="@color/textcolor"
                        android:textSize="16sp" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lato_regular"
                        android:textColor="@color/greycolor"
                        android:background="@android:color/transparent"
                        android:textSize="16sp"
                        android:text="Dayly" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lato_regular"
                        android:textColor="@color/greycolor"
                        android:background="@android:color/transparent"
                        android:textSize="16sp"
                        android:text="Weekly" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>


</LinearLayout>